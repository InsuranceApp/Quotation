        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05/02/2014"
        android:id="@+id/textView19"
        android:textColor="#3f5165"
        android:layout_alignTop="@+id/textView18"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model:"
        android:id="@+id/textView20"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#3f5165"

        android:layout_below="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASHOK LEYLAND,"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView17"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:textColor="#3f5165"

        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STILE LE 8STR"
        android:id="@+id/textView22"
        android:textSize="14dp"
        android:layout_below="@+id/textView17"
        android:layout_toRightOf="@+id/textView21"
        android:textColor="#3f5165"

        android:layout_toEndOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model:"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="#3f5165"

        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This quote is as on 20/03/2016. The premium estimate is given by assuming that all previous policies have been renewed continuously without any gap in insurance and no claim has been made in previous policies "
        android:id="@+id/textView25"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/textView15"
        android:textColor="#3f5165"
        android:layout_alignEnd="@+id/textView15" />

</RelativeLayout>