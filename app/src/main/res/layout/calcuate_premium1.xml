<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="#3f51b5">
        <!--<android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3f51b5"
            android:popupTheme="@style/AppTheme.PopupOverlay"></android.support.v7.widget.Toolbar>
    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#3f51b5"
            android:text="IBM Vehicle Insurance"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/HeaderImage"
            android:layout_marginLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/car_protection"/>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Premium"
        android:layout_marginTop="30dp"
        android:id="@+id/CalculatePremium"
        android:textSize="25dp"
        android:padding="10dp"
        android:textColor="#3f5165"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Policy Number"
        android:id="@+id/PolicyNumber"
        android:textSize="22dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textColor="#3f5165"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/PolicyNumberDetail"
        android:textSize="25dp"
        android:paddingLeft="7dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="15dp"
        android:textColor="#3f5165"
        android:background="#b0e0e6"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:padding="10dp"
        android:id="@+id/Confirmation"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:textColor="#3f5165"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ConfirmationType"
        android:spinnerMode="dropdown"
        android:textColor="#3f5165"
        android:background="#b0e0e6"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine/Chasis Number"
        android:id="@+id/NumberDetail"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="#3f5165"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/EngineChasisNumber"
        android:textColor="#3f5165"
        android:background="#b0e0e6"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/CalculatePreButton"
        android:layout_marginTop="700dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="#b0e0e6"
        android:background="#3f51b5"
        android:textSize="15dp"
        android:textStyle="bold" />


</LinearLayout>
